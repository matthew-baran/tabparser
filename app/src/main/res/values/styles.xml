<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Chords">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/colorChords</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Lyrics">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/colorLyrics</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Anchors">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/colorAnchors</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/toolBarBackground</item>
    </style>
</resources>
